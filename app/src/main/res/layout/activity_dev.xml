<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DevActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/devProfilePicture"
        android:layout_width="153dp"
        android:layout_height="153dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@drawable/poto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/devname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Taffan"
        android:layout_marginTop="12dp"
        android:textStyle="bold"
        android:textSize="24sp"
        android:fontFamily="@font/comfortaa"
        app:layout_constraintTop_toBottomOf="@+id/devProfilePicture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/desc"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/devname"
        android:fontFamily="@font/comfortaa"
        android:layout_marginTop="35dp"
        android:justificationMode="inter_word"
        android:text="@string/self_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/githubButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        app:iconPadding="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        app:iconTint = "@color/primaryColor"
        android:textColor="@color/black"
        app:strokeColor = "@android:color/transparent"
        android:backgroundTint="#33000000"
        android:text="GitHub"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desc" />

</androidx.constraintlayout.widget.ConstraintLayout>